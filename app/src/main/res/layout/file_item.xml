<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15dp"
        android:text="计算机网络2018期末试卷"/>

    <TextView
        android:id="@+id/uploader"
        android:text="上传者： Dick"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/download_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/uploader"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="下载次数： 666"
        />

    <TextView
        android:id="@+id/star"
        android:text="评价： 4/5"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toRightOf="@id/download_count"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_time"
        android:text="创建时间：2018/12/31"
        app:layout_constraintTop_toBottomOf="@id/uploader"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/file_description"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/create_time"
        android:textColor="#111111"
        android:layout_marginTop="5dp"
        android:text="文件描述：Android Test"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/file_description"
        />

</android.support.constraint.ConstraintLayout>